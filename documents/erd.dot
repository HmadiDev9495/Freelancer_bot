digraph ERD {
  rankdir=LR;
  node [shape=record];

  user [label="{ user |
    id (PK) |
    telegram_id |
    name |
    email (UNIQUE) |
    password_hash |
    role |
    rating |
    profile_picture |
    bio |
    hourly_rate |
    phone |
    linkedin |
    github |
    website |
    created_at |
    last_login
  }"];

  skill [label="{ skill |
    id (PK) |
    name (UNIQUE) |
    category
  }"];

  user_skill [label="{ user_skill |
    user_id (FK) |
    skill_id (FK) |
    proficiency
  }"];

  project [label="{ project |
    id (PK) |
    employer_id (FK) |
    title |
    description |
    category |
    role |
    budget |
    delivery_days |
    created_at
  }"];

  user -> user_skill [label="1..*"];
  skill -> user_skill [label="1..*"];
  user -> project [label="1..*"];
}
